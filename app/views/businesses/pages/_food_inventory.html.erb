<div class="container">
  <div class="carousel slide multi-item-carousel" id="theCarousel">
    <div class="carousel-inner">
      <div class="item active">
        <div class="col-xs-4">
          <div class="inv-food-card">
            <div class="food-picture" style="background-image: url('<%= @first_item.photo %>')">
            </div>
            <div class="food-details">
              <h2><%= @first_item.name %></h2>
              <div class="food-description">
                <%= @first_item.description %>
              </div>
            </div>
            <hr>
            <div class="portions-number">
              <div class="circle">
                <h5><%= @first_item.portion %></h5>
              </div> Portions left
            </div>
            <hr>
            <div class="order-info">
              <h3>Order Before:</h3>
              <%= @first_item.pickup_end.strftime("%I:%M %p") %>
            </div>
            <hr>
            <div class="pickup-time">
              <h3>Pick-up</h3> From
              <%= @first_item.pickup_start.strftime("%I:%M %p") %> - Till
                <%= @first_item.pickup_end.strftime("%I:%M %p") %>
            </div>
            <%= link_to "Edit", edit_food_path(@first_item) %>
          </div>
        </div>
      </div>


      <% @food_without_first.each do |food| %>
        <div class="item">
          <div class="col-xs-4">
            <div class="inv-food-card">
              <div class="food-picture" style="background-image: url('<%= food.photo %>')">
              </div>
              <div class="food-details">
                <h2><%= food.name %></h2>
                <div class="food-description">
                  <%= food.description %>
                </div>
              </div>

              <hr>

              <div class="portions-number">
                <div class="circle">
                  <h5><%= food.portion %></h5>
                </div> Portions left
              </div>

              <hr>

              <div class="order-info">
                <h3>Order Before:</h3>
                <%= food.pickup_end.strftime("%I:%M %p") %>
              </div>

              <hr>

              <div class="pickup-time">
                <h3>Pick-up</h3> From
                <%= food.pickup_start.strftime("%I:%M %p") %> - Till
                  <%= food.pickup_end.strftime("%I:%M %p") %>
              </div>

              <%= link_to "Edit", edit_food_path(food) %>

            </div>
          </div>
        </div>
      <% end %>
    </div>

    <a class="left carousel-control" href="#theCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>

    <a class="right carousel-control" href="#theCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
  </div>
</div>
