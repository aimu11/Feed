<h1>Purchase of teddy <%= @order.teddy_sku %></h1>
<%= form_tag order_payments_path(@order) do %>
  <article>
    <label class="amount">
      <span>Price: <%= humanized_money_with_symbol(@order.price) %></span>
    </label>
  </article>


  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Food"
    data-email="<%= current_user.email %>"
    data-description="Food <%= @order.food_sku %>"
    data-amount="<%= @order.price_cents %>"
    data-currency="<%= @order.price_cents.currency %>"></script>

<% end %>
