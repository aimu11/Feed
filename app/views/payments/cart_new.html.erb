<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
       <div class="form-payment">
        <h1>Purchase of food</h1>
        <%= form_tag cart_payments_path(@cart) do %>
        <article>
        <label class="amount">
       <%# raise %>
        <span>Price: <%= humanized_money_with_symbol(@cart.price) %></span>
       </label>
       </article>


       <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
       data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
       data-name="My Food"
       data-email="<%= current_user.email %>"
       data-description="Food <%= @cart.id %>"
       data-amount="<%= @cart.price_cents %>"
       data-currency="<%= @cart.price.currency %>"></script>

      <% end %>
     </div>
    </div>
  </div>
</div>
