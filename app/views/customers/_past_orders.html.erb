
<% current_user.customer.orders.each do |order| %>
  <% if order.food.pickup_end.to_date.future? == false %>
<% i = 0 %>

<div class="card-current-order">
  <div class="order-number">
    <%= i = i + 1  %>
  </div>

  <div class="food-info">
    <div class="food-name">
      <%= order.food.name %>
    </div>

    <li>Dietary Category: <%= order.food.dietary_category%></li>
  </div>


  <div class="pick-info">
    <div class="portions-and-number">
      <li class="portion">
      <%= order.food.portion %>
      </li>

      <li>Portions</li>
    </div>
  </div>



  <div class="cust-info">
    <div class="made-by">
      pickup from <b><%= order.food.pickup_start.strftime("%I:%M %p")  %></b> to <b><%= order.food.pickup_end.strftime("%I:%M %p") %></b> at <b><%= order.food.business.name %></b> <%= order.food.business.address %>
    </div>
    <li class= "price-style"><%= humanized_money_with_symbol(order.food.price) %>.00</li>
  </div>
</div>

  <% end %>
<% end %>
