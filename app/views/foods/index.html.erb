<div class="main-container">
  <div class="food-container col-xs-4">
    <div class="dietary-filters">
      <h3>Dietary</h2> <br>


    </div>

    <div class="col-xs-12 wrapper-card">
      <% @foods.each do |food| %>
    <%#= link_to '', '#', class: 'card-link', data: { toggle: 'tooltip', placement: 'right', html: true } %>
        <div class="food-card" onclick="mapOpenInfo(<%= food.id %>)" data-toggle="tooltip" data-placement="right">
          <div class="food-card-content">
            <div class="food-item">
              <p>
                <%= image_tag "burger_icon.png", size: "20x16" %> <%= image_tag "carrot_icon.png", size: "20x16" %>
              </p>
              <h4><%= food.name %> </h4>
              <h5><%= food.business.name %></h5>

            </div>
              <div class="food-price">
                <h4><%= humanized_money_with_symbol(food.price) %></h4>
              </div>
            <%= render "foods/show", food: food %>
          </div>
        </div>
      <% end %>
    </div>
  </div>


  <div id="map-container">
    <div id="map" data-markers="<%= @markers.to_json %>"></div>
  </div>

</div>


